{
  "name": "mosaic_server",
  "author": "Ought",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Mosaic server",
  "main": "lib/index.js",
  "scripts": {
    "dev": "npm run tsc && concurrently \"npm run watch-tsc\" \"npm run watch-node\"",
    "watch-tsc": "tsc -w",
    "tsc": "tsc; exit 0",
    "watch-node": "nodemon --delay 5 --watch dist --inspect=0.0.0.0 --nolazy dist/index.js",
    "server": "nodemon -L --watch lib --exec node --inspect=0.0.0.0 -r ts-node/register lib/index.js -e '.ts,.js' --presets es2015,stage-2",
    "typecheck": "tsc -p tsconfig.json --noEmit -w",
    "start": "ts-node --transpile-only lib/index.ts",
    "debug": "nodemon --inspect lib/index.js --exec ts-node --extensions '.ts,.js' --presets es2015,stage-2",
    "build": "babel --extensions '.ts,.js' lib -d dist",
    "db:create": "node_modules/.bin/sequelize db:create",
    "db:drop": "node_modules/.bin/sequelize db:drop",
    "db:migrate": "node_modules/.bin/sequelize db:migrate",
    "db:migrate:undo": "node_modules/.bin/sequelize db:migrate:undo",
    "db:seed": "node_modules/.bin/sequelize db:seed:all",
    "db:reset": "yarn run db:clear; yarn run db:migrate",
    "db:clear": "yarn run db:drop; yarn run db:create",
    "test": "NODE_ENV=test mocha --watch --watch-extensions ts -r ts-node/register/transpile-only test/**/*.spec.ts",
    "test:ci": "NODE_ENV=test mocha -r ts-node/register/transpile-only --exit test/**/*.spec.ts",
    "test-scheduler": "mocha --watch --watch-extensions ts -r ts-node/register test/lib/scheduler/*.spec.ts",
    "lint": "tslint -p . && prettier -c lib/**/*.ts lib/**/*.js",
    "pretest": "NODE_ENV=test npm run db:reset"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "@slack/web-api": "^5.0.1",
    "apollo": "^2.9.0",
    "apollo-server": "^2.4.8",
    "apollo-server-express": "^2.4.8",
    "async": "^2.6.0",
    "asyncro": "^3.0.0",
    "auth0": "^2.17.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.1",
    "case": "^1.5.4",
    "cookie-parser": "~1.4.3",
    "debug": "^4.1.1",
    "deep-object-diff": "^1.1.0",
    "dotenv": "^8.0.0",
    "es6-promise": "^4.1.1",
    "express-sslify": "^1.2.0",
    "graphql": "^14.2.1",
    "graphql-client": "^2.0.0",
    "graphql-relay": "^0.6.0",
    "graphql-sequelize": "^9.3.5",
    "graphql-tag": "^2.5.0",
    "graphql-tools": "^4.0.4",
    "graphql-type-json": "^0.3.0",
    "lodash": "^4.17.4",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "pluralize": "^7.0.0",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^5.8.12",
    "sequelize-cli": "^5.4.0",
    "sequelize-migration-pg-extras": "^1.0.1",
    "sequelize-typescript": "^1.0.0-beta.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-transform-typescript": "^7.4.4",
    "@types/chai": "^4.1.2",
    "@types/graphql": "^14.2.0",
    "@types/mocha": "^5.2.6",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "babel-register": "^6.11.6",
    "chai": "^4.1.2",
    "concurrently": "^4.0.1",
    "immutable": "^3.8.2",
    "mocha": "^6.1.4",
    "nodemon": "^1.12.1",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.3.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5",
    "wait-on": "^3.2.0"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
